<UserControl x:Class="STIVE.Controls.AddUpdateDeleteButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:STIVE.Controls"
			 xmlns:viewmodel="clr-namespace:STIVE.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>
		<Button Grid.Column="0" Content="Ajouter" Command="{Binding AddNewElement}" />
		<Button Grid.Column="1" Content="Modifier" Command="{Binding UpdateElement}" />
		<Button Grid.Column="2" Content="Supprimer" Command="{Binding DeleteElement}" Visibility="{Binding Source={x:Static viewmodel:MainWindowViewModel.Administrator}, Path=Administrator, Converter={StaticResource BooleanToVisibilityConverter}}"/>
	</Grid>
</UserControl>
